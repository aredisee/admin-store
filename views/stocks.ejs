<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-bordered table-striped align-middle">
      <thead class="table-success">
        <tr>
          <th>ID</th>
          <th>Nama Produk</th>
          <th>Jumlah Stok</th>
        </tr>
      </thead>
      <tbody>
        <% stocks.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.nama_produk %></td>
            <td><%= s.jumlah %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

