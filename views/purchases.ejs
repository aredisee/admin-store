<h2 class="mb-4 text-center">üõí Data Pembelian</h2>

<!-- Form Tambah Pembelian -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-warning text-dark fw-bold">
    Tambah Pembelian Baru
  </div>
  <div class="card-body">
    <form action="/purchases/add" method="POST" class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Pilih Produk</label>
        <select name="produk_id" class="form-select" required>
          <option value="">-- Pilih Produk --</option>
          <% products.forEach(p => { %>
            <option value="<%= p.id %>"><%= p.nama %> (Rp <%= p.harga.toLocaleString() %>)</option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-4">
        <label class="form-label">Jumlah</label>
        <input type="number" name="jumlah" class="form-control" min="1" required>
      </div>
      <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-primary w-100">Tambah</button>
      </div>
    </form>
  </div>
</div>

<!-- Tabel Pembelian -->
<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover align-middle">
      <thead class="table-warning">
        <tr>
          <th>ID</th>
          <th>Produk</th>
          <th>Jumlah</th>
          <th>Total</th>
          <th>Status</th>
          <th>Tanggal</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% purchases.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.nama_produk %></td>
            <td><%= p.jumlah %></td>
            <td>Rp <%= p.total.toLocaleString() %></td>
            <td>
              <% if (p.status === "aktif") { %>
                <span class="badge bg-success">Aktif</span>
              <% } else { %>
                <span class="badge bg-danger">Cancel</span>
              <% } %>
            </td>
            <td><%= new Date(p.tanggal).toLocaleString() %></td>
            <td>
              <% if (p.status === "aktif") { %>
                <a href="/purchases/cancel/<%= p.id %>" class="btn btn-sm btn-outline-danger">Batalkan</a>
              <% } else { %>
                <button class="btn btn-sm btn-secondary" disabled>Sudah Dibatalkan</button>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

